#include <msp430g2553.h>
long ADCDATA;
long tempInDeg;
/*
 * main.c
 */
int main(void) {
    WDTCTL = WDTPW | WDTHOLD;	// Stop watchdog timer
    ADC10CTL1 = SHS_1 + CONSEQ_0 + INCH_10;
    ADC10CTL0 = SREF_1 + ADC10SHT_2 + REFON + ADC10ON + ADC10IE;
    __enable_interrupt();
    TACCR0 = 30;
    TACCTL0 |= CCIE;
    TACTL = TASSEL_2 + MC_1;
    LPM0;
    TACCTL0 &= ~CCIE;
    __disable_interrupt();

    ADC10CTL0 |= ENC;
    P1DIR |= BIT0 + BIT6;
    P1OUT = BIT0;
    TACCR0 = 2048;
    TACCTL1 = OUTMOD_3;
    TACCR1 = 2047;
    TACTL =TASSEL_1 + MC_1;

	__bis_SR_register(LPM3_bits + GIE);
}

#pragma vector=ADC10_VECTOR
__interrupt void ADC10_ISR(void) {
	tempInDeg = ((ADC10MEM - 673) * 423) / 1024;
    if (tempInDeg > 30) {
    	P1OUT ^= BIT0+BIT6;
    } else {
    	P1OUT ^= BIT0+BIT6;
    }
}

#pragma vector = TIMER0_A0_VECTOR
__interrupt void TIMER0_A0_ISR (void){
    TACTL = 0;
    LPM0_EXIT;
}
